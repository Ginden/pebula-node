{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@pebula/*": [
        "packages/*"
      ]
    }
  },
  "exclude": [
    "packages/*/cjs",
    "packages/*/esm",
    "packages/*/dist"
  ]
}
